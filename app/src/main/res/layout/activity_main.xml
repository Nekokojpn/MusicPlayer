<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/lay">

    <EditText
            android:id="@+id/title_in"
            android:layout_width="298dp"
            android:layout_height="39dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/app_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/search_btn"
            android:layout_width="101dp"
            android:layout_height="47dp"
            android:text="@string/search"
            app:layout_constraintBottom_toTopOf="@+id/l2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/title_in"
            app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="315dp"
            android:layout_height="659dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/l2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/title_in">

    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="662dp"
            android:id="@+id/l1" app:layout_constraintEnd_toStartOf="@+id/l2"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/title_in"/>

</androidx.constraintlayout.widget.ConstraintLayout>